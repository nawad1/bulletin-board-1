<div>
  <div>
    <h1>
      <%= @the_board.name %> 
    </h1>


<hr>

  <div>
    <h2>
      Add a new post
    </h2>

    <form action="/insert_post" method="post">
    <div>
        <label for="title_box">
          Title </label>
        <input type="text" id="title_box" name="title" >
     </div>
     <div>
        <label for="body_box">
          Body </label>
        <input type="text" id="body_box" name="body" >
      </div>
      <div>
        <label for="expires_on_box">
          Expires on </label>
        <input type="date" id="expires_on_box" name="expires_on" >
      </div>
     

        <input type="hidden" id="board_id" name="boardid" value="<%= @the_board.id%>" >
   

      <button>
        Add post
      </button>
    </form>
  </div>


<h2>Active posts</h2>
<%matching_posts = Post.where('board_id = ? AND expires_on > ?', @the_board.id, Date.today).order(expires_on: :desc)%>


<table border="1">
<tr>
  <th>Title</th>
  <th>Body</th>
  <th>Posted on</th>
  <th>Expires on</th>
</tr>
<% matching_posts.each do |a_post| %>
<tr>
  <td> <%= a_post.title%> </td>
  <td><%= a_post.body%></td>
  <td>P<%= a_post.created_at%></td>
  <td><%= a_post.expires_on%></td>
</tr>
<%end %>

</table>

<h2>Expired posts</h2>
<%matching_posts = Post.where('board_id = ? AND expires_on < ?', @the_board.id, Date.today).order(expires_on: :desc)%>


<table border="1">
<tr>
  <th>Title</th>
  <th>Body</th>
  <th>Posted on</th>
  <th>Expires on</th>
</tr>
<% matching_posts.each do |a_post| %>
<tr>
  <td> <%= a_post.title%> </td>
  <td><%= a_post.body%></td>
  <td>P<%= a_post.created_at%></td>
  <td><%= a_post.expires_on%></td>
</tr>
<%end %>

</table>
